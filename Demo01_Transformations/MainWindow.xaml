<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Demo01_Transformations"
        x:Class="Demo01_Transformations.MainWindow"
        Title="Transformations"
        Width="960"
        Height="576"
        WindowState="Maximized">
    <Grid Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <local:DemoTranslateTransform Grid.Column="0" Margin="3"/>
        <local:DemoRotateTransform Grid.Column="1" Margin="3"/>
        <local:DemoSkewTransform Grid.Column="2" Margin="3"/>
        <local:DemoScaleTransform Grid.Column="3" Margin="3"/>
    </Grid>
</Window>
