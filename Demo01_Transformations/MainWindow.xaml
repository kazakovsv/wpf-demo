<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Demo01_Transformations"
        x:Class="Demo01_Transformations.MainWindow"
        Title="Transformations"
        Width="960"
        Height="576"
        WindowState="Maximized">
    <Grid Margin="3">
        <TabControl Margin="3">
            <TabItem Header="Translate transform">
                <local:DemoTranslateTransform Margin="3"/>
            </TabItem>
            <TabItem Header="Rotate transform">
                <local:DemoRotateTransform Margin="3"/>
            </TabItem>
            <TabItem Header="Skew transform">
                <local:DemoSkewTransform Margin="3"/>
            </TabItem>
            <TabItem Header="Scale transform">
                <local:DemoScaleTransform Margin="3"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
